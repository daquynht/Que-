@model Que.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">

    <h1 class="gradient-text mb-4">¿Qué?</h1>

    <!-- Search and Filters -->
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search by title, description, category..."
                   value="@Model.SearchTerm" />
        </div>

        <div class="col-md-2">
            <select name="selectedCategory" class="form-select">
                <option value="">All Categories</option>
                @foreach (var category in Model.Categories)
                {
                    @:<option value="@category" @(Model.SelectedCategory == category ? "selected=\"selected\"" : "")>@category</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select name="selectedDifficulty" class="form-select">
                <option value="">All Levels</option>
                @foreach (var difficulty in Model.Difficulties)
                {
                    @:<option value="@difficulty" @(Model.SelectedDifficulty == difficulty ? "selected=\"selected\"" : "")>@difficulty</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select name="selectedQuestionCount" class="form-select">
                <option value="">Any Length</option>
                @foreach (var range in Model.QuestionCounts)
                {
                    @:<option value="@range.Label" @(Model.SelectedQuestionCount == range.Label ? "selected=\"selected\"" : "")>@range.Label</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var quiz in Model.Quizes)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@quiz.Name</h5>
                        <p class="card-text text-muted">@quiz.Description</p>
                        <a asp-controller="Quiz" asp-action="Update" asp-route-id="@quiz.QuizId" class="btn btn-primary">
                            Update Quiz
                        </a>
                        <a asp-controller="Quiz" asp-action="Delete" asp-route-id="@quiz.QuizId" class="btn btn-primary">
                            Delete Quiz
                        </a>
                        <a asp-controller="Quiz" asp-action="Take" asp-route-id="@quiz.QuizId" class="btn btn-success">
                            Take Quiz
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>  
    </table>
</div>