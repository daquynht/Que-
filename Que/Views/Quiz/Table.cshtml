@model Que.ViewModels.QuizesViewModel

<h1>List of Quizes</h1>

<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Quiz Name</th>
                <th>Difficulty</th>
                <th>Time Limit</th>
                <th>Category</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model.Quizes)
            {
                <tr>
                    <td>@quiz.Name</td>
                    <td>@quiz.Difficulty</td>
                    <td>@quiz.TimeLimit</td>
                    <td>@quiz.Category</td>
                    <td>@quiz.Description</td>
                    <td>
                        <a asp-controller="Quiz" asp-action="Update" asp-route-id="@quiz.QuizId" class="btn btn-primary">
                            Update Quiz
                        </a>
                        <a asp-controller="Quiz" asp-action="Delete" asp-route-id="@quiz.QuizId" class="btn btn-primary">
                            Delete Quiz
                        </a>
                        <a asp-controller="Quiz" asp-action="Take" asp-route-id="@quiz.QuizId" class="btn btn-success">
                            Take Quiz
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
