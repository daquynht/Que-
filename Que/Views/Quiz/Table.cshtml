@model Que.ViewModels.QuizesViewModel

<a asp-controller="Quiz" asp-action="Grid" class="btn btn-secondary">Grid View</a>

<h1>List of Quizzes (@Model.CurrentViewName View)</h1>

<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Quiz Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model.Quizes)
            {
                <tr>
                    <td>
                        <img src="@quiz.ImageUrl" alt="@quiz.Name" style="max-width: 100px; max-height: 60px;" />
                    </td>
                    <td>@quiz.Name</td>
                    <td>@quiz.Description</td>
                    <td>
                        <a asp-controller="Quiz" asp-action="Take" asp-route-id="@quiz.QuizId" class="btn btn-primary">
                            Take Quiz
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

