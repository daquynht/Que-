@model IEnumerable<Quiz> //en liste over quiz-objekter

<h1>List of quizes (@ViewBag.CurrentViewName View)</h1>

<a href="/Quiz/Table">Table</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var quiz in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@quiz.ImageUrl" class="card-img-top" alt="@quiz.Title">

                <div class="card-body">
                    <h5 class="card-title">@quiz.Title</h5>
                    <p class ="card-text">@quiz.Description</p>
                </div>

                <div class="card-footer text-center">
                    <a href="/Quiz/Start/@quiz.Id" class="btn btn-primary">StartQuiz</a>
                </div>
            </div>
        </div>
        }
 </div> 

