@model Quiz
@{
    ViewBag.Title = "Create New Quiz";
}

<h2>Create New Quiz</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label><span class="text-danger">*</span>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label><span class="text-danger">*</span>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin: 20px 0;">
        <button type="button" id="add-question-btn" class="btn-gradient">
            <i class="bi bi-plus-lg"></i> Add Question
        </button>
    </div>

        <div id="questions-container"></div>

    <button type="submit" class="btn btn-primary">Create Quiz</button>
    <a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
</form>

@section Scripts {
    <script>
        let questionIndex = 0;

        document.getElementById("add-question-btn").addEventListener("click", function () {
            const container = document.getElementById("questions-container");

            const questionHtml = `
                <div class="question-item mb-3">
                    <label>Question Text</label>
                    <input type="text" name="Questions[${questionIndex}].Text" class="form-control" required />

                    <label>Options</label>
                    <input type="text" name="Questions[${questionIndex}].Options[0].Text" placeholder="Option A" class="form-control mt-1" required />
                    <input type="text" name="Questions[${questionIndex}].Options[1].Text" placeholder="Option B" class="form-control mt-1" required />
                    <input type="text" name="Questions[${questionIndex}].Options[2].Text" placeholder="Option C" class="form-control mt-1" required />
                    <input type="text" name="Questions[${questionIndex}].Options[3].Text" placeholder="Option D" class="form-control mt-1" required />

                    <label>Correct Option (0-3)</label>
                    <input type="number" name="Questions[${questionIndex}].CorrectOptionIndex" class="form-control mt-1" min="0" max="3" required />
                </div>
            `;
            container.insertAdjacentHTML("beforeend", questionHtml);
            questionIndex++;
        });
    </script>
}