@model Que.Models.Quiz

<h2>Create Quiz</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="QuizId" />

    <div class="form-group">
        <label asp-for="Name">Quiz Title</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-select">
            <option>Trivia</option>
            <option>History</option>
            <option>Geography</option>
            <option>Math</option>
            <option>Science</option>
            <option>Other</option>
        </select>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Difficulty">Difficulty</label>
        <select asp-for="Difficulty" class="form-select">
            <option>Easy</option>
            <option selected>Medium</option>
            <option>Hard</option>
        </select>
    </div>

    <div class="form-group mt-2">
        <label asp-for="TimeLimit">Time Limit (minutes)</label>
        <input asp-for="TimeLimit" type="number" min="1" class="form-control" />
    </div>

    <h4 class="mt-4">Questions</h4>

    <div>
        @for (int q = 0; q < Model.Questions.Count; q++)
        {
            <div class="border p-3 mb-4 rounded question-block">
                <h5>Question @(q + 1)</h5>
                <div class="form-group">
                    <label asp-for="Questions[q].Text">Question Text</label>
                    <input asp-for="Questions[q].Text" class="form-control" />
                </div>

                <div class="form-check mt-2">
                    <input type="checkbox" class="form-check-input allow-multiple" asp-for="Questions[q].AllowMultipleAnswers" />
                    <label class="form-check-label" asp-for="Questions[q].AllowMultipleAnswers">Allow Multiple Answers</label>
                </div>

                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Correct</th>
                            <th>Option Text</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int o = 0; o < Model.Questions[q].Options.Count; o++)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input" asp-for="Questions[q].Options[o].IsCorrect" data-radio="true" />
                                </td>
                                <td>
                                    <input asp-for="Questions[q].Options[o].Text" class="form-control" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Quiz</button>
</form>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    const questions = document.querySelectorAll(".question-block");

    questions.forEach(qBlock => {
        const allowMultiple = qBlock.querySelector(".allow-multiple");
        const checkboxes = qBlock.querySelectorAll("input[type='checkbox'][data-radio]");

        allowMultiple.addEventListener("change", () => {
            if (!allowMultiple.checked) {
                // Fjern markering fra alle checkboxer hvis Multiple Answers ikke er valgt
                checkboxes.forEach(cb => cb.checked = false);
            }
        });

        checkboxes.forEach(cb => {
            cb.addEventListener("change", () => {
                if (!allowMultiple.checked && cb.checked) {
                    // Fjern markering fra andre checkboxer
                    checkboxes.forEach(other => {
                        if (other !== cb) other.checked = false;
                    });
                }
            });
        });
    });
});
</script>
}