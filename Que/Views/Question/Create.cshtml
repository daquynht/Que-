@model Que.Models.Question

@{
    ViewBag.Title = "Add Question";
}

<h2>Add Question to Quiz @ViewBag.QuizId</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="QuizId" value="@ViewBag.QuizId" />
    <div class="form-group">
        <label asp-for="Text">Question Text</label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <h4>Answer Options</h4>
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        <div class="form-group">
            <label>Option @(i+1)</label>
            <input asp-for="Options[@i].Text" class="form-control" />
            <label>
                <input asp-for="Options[@i].IsCorrect" type="checkbox" /> Correct
            </label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Add Question</button>
</form>

<a asp-action="CreateQuestions" asp-controller="Quiz" asp-route-quizId="@ViewBag.QuizId" class="btn btn-secondary">Back to Quiz</a>
